<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.rmn.ews.menuItem.setting.SettingFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/per_view"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/perm"
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:text="Allow OfflineData Backup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:layout_marginEnd="15dp"
            android:layout_alignBottom="@+id/perm"
            android:layout_alignParentEnd="true"
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:clickable="false"
        android:focusable="false"
        android:id="@+id/time_enter"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/msg"
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:text="Enter Time When you want to\n store offline data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="8:30"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>
